<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>enter</servlet-name>
        <servlet-class>com.imran.attendance.enter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validate</servlet-name>
        <servlet-class>com.imran.attendance.validate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>enterholiday</servlet-name>
        <servlet-class>com.imran.attendance.enterholiday</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>takeattendance</servlet-name>
        <servlet-class>com.imran.attendance.takeattendance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.imran.attendance.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>enter</servlet-name>
        <url-pattern>/enter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validate</servlet-name>
        <url-pattern>/validate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enterholiday</servlet-name>
        <url-pattern>/enterholiday</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>takeattendance</servlet-name>
        <url-pattern>/takeattendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
